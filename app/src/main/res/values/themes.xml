<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Guauguau" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/magenta_700</item>
        <item name="colorSecondaryVariant">@color/magenta_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="floatingActionButtonStyle">@style/Widget.Guauguau.FloatingActionButton</item>

        <item name="textInputStyle">
            @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>

        <item name="bottomNavigationStyle">@style/Widget.GuauGuau.BottomNavigationView.Colored</item>
        <item name="toolbarStyle">@style/Widget.GuauGuau.Toolbar.Primary</item>
        <item name="bottomSheetStyle">@style/Widget.GuauGuau.BottomSheet</item>
    </style>
</resources>